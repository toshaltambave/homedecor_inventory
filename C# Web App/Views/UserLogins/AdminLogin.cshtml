@model HomeDecor.Models.UserLogin

@{
    ViewData["Title"] = "Choose Option";
}
<h3>Choose records options to visit</h3>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Home" class="navbar-brand">Home Decor</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (TempData["username"] != null)
                {
                    <li><a asp-area="" asp-controller="UserLogins" asp-action="Logout">Logout</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="UserLogins" asp-action="Login" method="post">
             
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <input type="hidden" name="SearchString" value="">   
             <input type="hidden" name="SearchString1" value="">
             <input type="submit" asp-controller="FacilityModels" asp-action="Index" value="View All Facilities" class="btn btn-default" /> <br/>
             <input type="submit" asp-controller="FacilityModels" asp-action="ActiveFacilities" value="View Active Facilities" class="btn btn-default" /> <br/>
             <input type="submit" asp-controller="FacilityModels" asp-action="InactiveFacilities" value="View Inactive Facilities" class="btn btn-default" />

            </div>
            <div class="form-group">
                <input type="submit" asp-controller="UserAccounts" asp-action="Index" value="User Accounts" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
