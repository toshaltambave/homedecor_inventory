@model HomeDecor.Models.UserAccount
@{
    ViewData["Title"] = "Create";


}

@TempData["username"]
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Home" class="navbar-brand">Home Decor</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (TempData["username"] != null)
                {
                    <li><a asp-area="" asp-controller="UserLogins" asp-action="Logout">Logout</a></li>
                }
            </ul>
        </div>
    </div>
</nav>

<h3>Create New User Account</h3>

<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccessRights" class="control-label"></label>
                <select class="form-control" id="AccessRights" name="AccessRights">
                    <option>RWX</option>
                    <option>RW</option>
                    <option>W</option>
                    <option>R</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Facility_code" class="control-label"></label>
                <div class="form-group">
                    <label asp-for="Facility_code" class="control-label"></label>
                    <select class="form-control" id="Facility_code" name="Facility_code">
                        @foreach (var items in ViewBag.Facility)
            {
                <option>@items</option>

}
                    </select>
                </div>
            </div>

        <div class="form-group">
            <label asp-for="isActive" class="control-label"></label>
            <select class="form-control" id="isActive" name="isActive">
                <option>True</option>
                <option>False</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="DecorModels" asp-action="Index">Back to Resource List</a>
    <a asp-controller="FacilityModels" asp-action="Index">| Back to Facilities List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}